<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskListMaui.Source.Screens.User.ChangePassword"
             BackgroundColor="#80000000">
    <Border
    StrokeShape="RoundRectangle 9" 
    Stroke="#830ad1"
    StrokeThickness="2"
    HorizontalOptions="Center"
    VerticalOptions="Center"
    >
        <StackLayout
            BackgroundColor="#fff"        
            Padding="20"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="250">
            <Label Text="Alterar Senha" HorizontalOptions="Center" FontAttributes="Bold"/>
            <StackLayout>

                <Entry 
                    x:Name="ABNewPassword"
                    BackgroundColor="#f5f5f5"/>      
            </StackLayout>
            
            <StackLayout
                Spacing="5"
                >
                <Button Text="Voltar"                        
                        Clicked="Back_Clicked"/>

                <Button Text="Alterar Senha"
                        Clicked="ChangePassword_Clicked"/>
            </StackLayout>
        </StackLayout>
    </Border>
</ContentPage>