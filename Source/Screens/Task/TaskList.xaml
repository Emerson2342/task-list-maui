<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskListMaui.Source.Screens.Task.TaskList"
             Title="TaskList">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <StackLayout BackgroundColor="#faf" Grid.Row="0">
                
            </StackLayout>
            <StackLayout BackgroundColor="#cecece" Grid.Row="1">
                
            </StackLayout>
            <StackLayout BackgroundColor="#00ffff" Grid.Row="2">
                <Button
                    x:Name="Mostrar"
                    Text="Mostrar Lista"
                    Clicked="Mostrar_Clicked"
                    />
            </StackLayout>
            
        </Grid>
    </ScrollView>
</ContentPage>